<div id="<%= dom_id post %>" class="post-container">
  <p>
    <%= post.title %>
  </p>

  <p>
    <%= post.description %>
  </p>

  <p>
    <%= post.keywords %>
  </p>

  <p>
    <%= link_to "", post, class: 'post-link' %>
  </p>

  <% post.images.each do |img| %>
    <%= image_tag(img, style: 'object-fit: cover; width: 300px; height: 600px;') %>
  <% end %>
</div>
