<div id="<%= dom_id post %>" class="post-container">
  <% post.images.each do |img| %>
    <%= link_to(post) do %>
      <%= image_tag(img, style: 'object-fit: cover; width: 500px; height: 500px;') %>
    <% end %>
  <% end %>
  <p>
    <%= post.title %>
  </p>

  <p>
    <%= post.description %>
  </p>

  <p>
    <%= post.keywords %>
  </p>

  <p>
    <%= post.user.email %>
  </p>
</div>
<p>
  <%= link_to post.user.email, post.user %>
</p>
