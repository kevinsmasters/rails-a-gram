<div class="row">
  <div class="col-12 text-center p-3 .bg-light">
    <h1><%= @user.user_name %></h1>
    <p><%= @user.email %></p>
    <p><strong><%= @user.bio %></strong></p>
  </div>
</div>
<% if @user.avatar.attached? %>
    <%= image_tag @user.avatar, class: "profile_avatar_img" %>
<% end %>
<% if current_user.following?(@user) %>
  <%= button_to "unfollow", unfollow_path(@user) %>
<% elsif current_user.sent_follow_request_to?(@user) %>
  <%= button_to "cancel follow req", cancel_path(@user) %>
<% else %>
  <%= button_to "follow", follow_path(@user) %>
<% end %>



